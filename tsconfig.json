{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "./app/**/*.ts",
    "./db/**/*.ts",
    "./sync/**/*.ts",
    "./types/**/*.ts",
    "./constants/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
}
